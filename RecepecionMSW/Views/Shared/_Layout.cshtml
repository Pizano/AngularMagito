 <!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/materialize.css" rel="stylesheet" />
    <link href="~/Content/estilos.css" rel="stylesheet" />
    @*<link href="~/Content/materialize.min.css" rel="stylesheet" />*@
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="~/Content/DataTables/css/dataTables.material.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

    @*<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />*@
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="main_container">
        <div class="nav-wrapper">
            <div class="container">
                <div class="navbar-header">
                    <ul class="">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("AppUser")|| User.Identity.IsAuthenticated && User.IsInRole("AppAdmin")) {
                        <li>
                            <a href='@Url.Action("Index", "Home")'>
                                <img class="logo" src='@Url.Content("~/Imagenes/msw.png")'/>
                            </a>
                        </li>
                        }
                        
                    </ul>
                    <ul class="nav navbar-nav">
                        
                        @*<li>@Html.ActionLink("Inicio", "Index", "Home")</li>*@
                        @if (User.Identity.IsAuthenticated && User.IsInRole("AppUser"))
    {

                    <li>@Html.ActionLink("Personas", "Index", "Personas")</li>
                    <li>@Html.ActionLink("Registro de Llamadas", "Index", "Registro_Llamadas")</li>
}
                        @if (User.Identity.IsAuthenticated && User.IsInRole("AppAdmin"))
    {
                    <li>@Html.ActionLink("Personas", "Index", "Personas")</li>
                    <li>@Html.ActionLink("Registro de Llamadas", "Index", "Registro_Llamadas")</li>
                    <li>@Html.ActionLink("Ver Usuarios", "Index", "Usuarios")</li>

                    <li>@*@Html.ActionLink("Crear Usuarios", "Agregar", "Usuarios")*@</li>

}
                    @*123abcG.Gcontresgeiovani*@

                    @*<li>@Html.ActionLink("Acerca de", "About", "Home")</li>*@
                    @*<li>@Html.ActionLink("Contacto", "Contact", "Home")</li>*@
                    </ul>

                </div>
                <div class="navbar-collapse collapse">

                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        
        @RenderBody()
        <hr />

        <footer>
            <div class="footer-copyright">
                <div class="container left-align">
                    © MSWRecepcion by Maldonado Software 2018
                    <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
                </div>
            </div>
            @*<p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")

    @*<script src="~/Scripts/jquery-3.3.1.js"></script>*@
    @*<script src="~/Scripts/materialize.js"></script>*@
    <script src="~/Scripts/materialize.min.js"></script>
    <script src="~/Content/jquery-ui.js"></script>
    @*<script src="~/Content/jquery-ui.min.js"></script>*@
    <script src="~/Scripts/scripts.js"></script>

    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
  

    <script>
        $(document).ready(function () {
            $('#mytable').DataTable({
                columnDefs: [
                    {
                        targets: [0, 1, 2],
                        className: 'mdl-data-table__cell--non-numeric'
                    }
                ],
                "info": true,
                "pagingType": "full_numbers",
                "pageLength": 8,
                "order": [
                    [0, "desc"]
                ],
                "language": {

                    "searchPlaceholder": "Buscar...",
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "oAria": {
                        "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                    }
                },
                "bLengthChange": false,
                "bFilter": true,
                "bAutoWidth": false

            });
        });

    </script>


    @RenderSection("scripts", required: false)
</body>
</html>
