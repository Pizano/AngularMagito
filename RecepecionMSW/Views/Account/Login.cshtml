@using RecepecionMSW.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}
<br />
<br />
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="contenedorL">
        <form class="col s12">
            <div>
                <nav>
                    <div class="nav-wrapper">
                        <h4 class="brand-logo center">Iniciar sesión</h4>
                    </div>
                </nav>
                <div class="content_container">
                    <div class="row">
                        <div class="input-field col s12">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })

                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                        @*123abcG.*@
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })

                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-fiel col s3 right">
                            <div>
                                <button class="btn waves-effect waves-light" id="button-default-down" type="submit" value="Create">
                                    Ingresar
                                </button>
                            </div>
                        </div>
                        <div class="input-fiel col s5 left">
                            <div>
                                @Html.ActionLink("¿Olvidó su contraseña?", "ForgotPassword", "Account")                          
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    }

